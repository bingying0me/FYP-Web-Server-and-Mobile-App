<h3>{{viewTitle}}</h3>
<form action="/item" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{item._id}}">
	<div class="form-group">
		Item_ID:<br>
		<input type="numbers" class= "form-control" name="item_id" placeholder = "Item_ID" value="{{item.item_id}}" required="required" pattern="{1,20}">
		<br>
	</div>
	<div class="form-group">
		Item name:<br>
		<input type="text" class= "form-control" name="item_name" placeholder = "Item_Name" value="{{item.item_name}}" required="required">
		<br>
	</div>
    <div class="form-group">
        Item Type:<br>
        <input type="text" class= "form-control" name="item_type" placeholder = "Item_Type" value="{{item.item_type}}" required="required">
        <br>
    </div>
	<div class="form-group">
		Item Info:<br>
		<input type="text" class= "form-control" name="item_info" placeholder = "Item_Info" value="{{item.item_info}}">
		<br><br>
	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
		<button type="reset" value="Reset" class= "btn btn-info">Reset</button>
		<button type="view" class="btn btn-info"><a  href="/item/list"><i class="fa fa-list-alt"></i>View All</a> </button>
	</div>
</form>
