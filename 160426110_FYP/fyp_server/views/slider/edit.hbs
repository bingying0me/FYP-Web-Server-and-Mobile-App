    <div class="column2">
<h3>{{viewTitle}}</h3>
<form action="/slider" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{slider._id}}">
	<div class="form-group">
		Slider_ID:<br>
		<input type="numbers" class= "form-control" name="slider_id" placeholder = "Slider_ID" value="{{slider.slider_id}}" required="required" pattern="{1,20}">
		<br>
	</div>
	<div class="form-group">
		Slider Photo:<br>
        <input  class= "form-control" name="slider_photo" id="slider_photo"  placeholder="Insert image URL here"  type="file" accept="image/*" onchange="loadFile(event)">
        <img id="output"/>

        <br>
		<br>
	</div>
	<div class="form-group">
		<button id="btn1" type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
		<button type="reset" value="Reset" class= "btn btn-info">Reset</button>
		<button type="view" class="btn btn-info"><a  href="/slider/list"><i class="fa fa-list-alt"></i>View All</a> </button>
	</div>
</form>
    </div>
</div>

<script>
    var loadFile = function(event) {
        var output = document.getElementById('output');
        output.src = URL.createObjectURL(event.target.files[0]);
    };
</script>
