<head>
	<link rel = "stylesheet"
   type = "text/css"
   href = "../listStyle.css" />
    <link rel = "stylesheet"
          type = "text/css"
          href = "../menu.css"/>
</head>
<div class="row">
    <div class="column1">
        <div class="dashboard">
            <img src="../logo2.png" alt="logo">
            <br>
            <div class='swanky_wrapper'>
                <label for='Dashboard'>
                    <span><a  href="/dashboard">Dashboard</a></span>
                </label>
                <label for='Member'>
                    <span><a  href="/member/list">Member</a></span>
                </label>
                <input id='Item' name='radio' type='radio'>
                <label for='Item'>
                    <span>Item</span>
                    <div class='lil_arrow'></div>
                    <div class='bar'></div>
                    <div class='swanky_wrapper__content'>
                        <ul>
                            <li><a  href="/item">Create</a></li>
                            <li><a  href="/item/list">List</a></li>
                        </ul>
                    </div>
                </label>
                <input id='Item Info' name='radio' type='radio'>
                <label for='Item Info'>
                    <span>Item Info</span>
                    <div class='lil_arrow'></div>
                    <div class='bar'></div>
                    <div class='swanky_wrapper__content'>
                        <ul>
                            <li><a  href="/itemInfo">Create</a></li>
                            <li><a  href="/itemInfo/list">List</a></li>
                        </ul>
                    </div>
                </label>
                <input id='Item Photo' name='radio' type='radio'>
                <label for='Item Photo'>
                    <span>Item Photo</span>
                    <div class='lil_arrow'></div>
                    <div class='bar'></div>
                    <div class='swanky_wrapper__content'>
                        <ul>
                            <li><a  href="/itemPhoto">Create</a></li>
                            <li><a  href="/itemPhoto/list">List</a></li>
                        </ul>
                    </div>
                </label>
                <label for='Staff'>
                    <span><a  href="/staff/list">Staff</a></span>
                </label>
                <label for='Slider'>
                    <span><a  href="/slider/list">Slider</a></span>
                </label>
                <label for='AppInfo'>
                    <span><a  href="/appInfo/list">App Info</a></span>
                </label>
                <label for='Logout'>
                    <span><a  href="/login">Logout</a></span>
                </label>
            </div>
        </div>
    </div>
    <div class="column2">
<h1>Slider List</h1>
<table class table table-striped>
<thead>
<tr>
<th>Slider ID</th>
<th>Slider Photo</th>
<th></th>
</tr>
</thead>
<tbody>
{{#each list}}
<tr>
<td>{{this.slider_id}}</td>
<td><img id="blah" src="../{{this.slider_photo}}"  /></td>
<td><button type="button" value="Edit"><a href="/slider/{{this._id}}">Edit</a></button></td>
</tr>
{{/each}}
</tbody>
</table>
    </div>
</div>
