<h3>{{viewTitle}}</h3>
<form action="/appInfo" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{appInfo._id}}">
	<div class="form-group">
		Name:<br>
		<input type="text" class= "form-control" name="name" placeholder = "Name" value="{{appInfo.name}}" required="required">
		<br>
	</div>
<!--	<div class="form-group">-->
<!--		Logo Photo:<br>-->
<!--        <input type="file" class= "form-control" name="logo_photo" placeholder = "Logo Photo" value="{{appInfo.logo_photo}}">-->
<!--		<br>-->
<!--	</div>-->
	<div class="form-group">
		Company:<br>
		<input type="text" class= "form-control" name="company"  placeholder = "Company" value="{{appInfo.company}}" required="required">
		<br>
	</div>
	<div class="form-group">
		Phone No.:<br>
		<input type="text" class= "form-control" name="phone"  placeholder = "Phone_no" value="{{appInfo.phone}}" pattern="[0-9]{8}">
		<br>
	</div>
	<div class="form-group">
		Email:<br>
		<input type="text" class= "form-control" name="email"  placeholder = "Email" value="{{appInfo.email}}">
		<br>
	</div>
	<div class="form-group">
        Address:<br>
		<input type="text" class= "form-control" name="address" value="{{appInfo.address}}" placeholder = "Address">
		<br>
	</div>
	<div class="form-group">
        Website:<br>
		<input type="website" class= "form-control" name="website" value="{{appInfo.website}}" placeholder = "Website">
		<br><br>
	</div>
    <div class="form-group">
        Facebook:<br>
        <input type="facebook" class= "form-control" name="facebook" value="{{appInfo.facebook}}" placeholder = "Facebook">
        <br><br>
    </div>
    <div class="form-group">
        IG:<br>
        <input type="ig" class= "form-control" name="ig" value="{{appInfo.ig}}" placeholder = "IG">
        <br><br>
    </div>
	<div class="form-group">
		<button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
		<button type="reset" value="Reset" class= "btn btn-info">Reset</button>
		<button type="view" class="btn btn-info"><a  href="/appInfo/list"><i class="fa fa-list-alt"></i>View All</a> </button>
	</div>
</form>
